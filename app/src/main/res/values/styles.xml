<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="BlueButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <!--<item name="android:paddingBottom">20dp</item>-->
        <!--<item name="android:paddingTop">20dp</item>-->
        <!-- <item name="android:textSize">13sp</item>-->
    </style>

    <!--<style name="BlueLink" parent="Base.Widget.AppCompat.TextView">-->
    <style name="BlueLink" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorLinkBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="GrayLink" parent="BlueLink">
        <item name="android:textColor">@color/colorSignUpGray</item>
    </style>

    <style name="TextMiddle" parent="Base.Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="EditTextCommon" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/dp_2</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditTextRightRounded" parent="EditTextCommon">
        <item name="android:background">@drawable/right_rounded_edit_text</item>
    </style>

    <style name="Spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:elevation">@dimen/dp_2</item>
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
